<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.study.customview.MainActivity">


        <Button
            android:id="@+id/btn_draw_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制颜色"/>

        <Button
            android:id="@+id/btn_draw_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制点"/>

        <Button
            android:id="@+id/btn_draw_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制直线"/>

        <Button
            android:id="@+id/btn_draw_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制矩形"/>

        <Button
            android:id="@+id/btn_draw_round_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制圆角矩形"/>

        <Button
            android:id="@+id/btn_draw_oval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制椭圆"/>

        <Button
            android:id="@+id/btn_draw_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制圆"/>
        <Button
            android:id="@+id/btn_draw_arc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制圆弧"/>
        <Button
            android:id="@+id/btn_draw_circular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制圆盘"/>

        <Button
            android:id="@+id/btn_canvas_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canvas平移"/>
        <Button
            android:id="@+id/btn_canvas_rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canvas旋转"/>
        <Button
            android:id="@+id/btn_canvas_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canvas缩放"/>
        <Button
            android:id="@+id/btn_canvas_skew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canvas扭曲"/>
        <Button
            android:id="@+id/btn_canvas_clip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canvas裁剪"/>
        <Button
            android:id="@+id/btn_canvas_save_restore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canvas保存和恢复"/>
        <Button
            android:id="@+id/btn_draw_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制Text"/>

    </LinearLayout>

</ScrollView>

